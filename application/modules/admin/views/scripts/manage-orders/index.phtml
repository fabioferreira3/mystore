	    	    var updatestock = confirm('Deseja retornar itens ao estoque?');
	    	    if(updatestock){
	    	        url = url + '&updatestock=1';
	    	    }
	    	    window.location.replace(url);
		    } 
	    }else{
		    alert('Selecione um pedido!'); 
	    }
	}
		
