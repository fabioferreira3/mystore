	function cancelOrder(){
		
		var count = 0;
		$('input.orderid').each(function(){
	        if($(this).prop('checked') == true){
	            count++;
	        }
	    });
	    if(count > 0){
		    var accept = confirm('Deseja mesmo cancelar este(s) pedido(s)?');
		    if(accept){
		        var url = '/admin238/manage-orders/cancel?';
	    	    var orders = '';
	    	    $('input.orderid').each(function(){
	    	        if($(this).prop('checked') == true){
	    	            orders = orders + '&orderid[]=' + $(this).val();
	    	        }
	    	    });
